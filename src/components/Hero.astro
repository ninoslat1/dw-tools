---
import { ArrowRight, Zap } from 'lucide-react'
import { Button } from '@/components/ui/button'
--- 
 
 <section
      class="
  min-h-screen flex items-center justify-center 
  pt-20 px-4 
  bg-linear-to-b from-dark/10 via-gray/5 to-background
  "
      id="#hero"
    >
      <div class="max-w-4xl mx-auto text-center">
        <div
          class="
          inline-flex items-center mb-6 px-4 py-2 
          bg-white/60 backdrop-blur-sm
          border border-dark/20
          rounded-full shadow-sm
          "
        >
          <span class="font-medium text-sm flex items-center gap-2 text-dark">
            <Zap className="w-4 h-4 text-gray" />
            No uploads • 100% private
          </span>
        </div>

        <h1
          class="
          mb-4 text-6xl md:text-7xl font-bold tracking-wide 
          bg-linear-to-r from-dark to-gray 
          bg-clip-text text-transparent font-is
          "
        >
          PicX
        </h1>

        <p class="text-lg md:text-xl max-w-2xl mx-auto mb-8 text-balance font-is text-muted-foreground">
          <span class="font-dm font-bold text-dark">Convert</span>,{' '}
          <span class="font-dm font-bold text-dark">upscale</span>,
          and more — locally on your device. No uploads, no limits, and{' '}
          <span class="font-bold text-gray inline-block animate-slide-collide">
            no data ever leaves your computer.
          </span>
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <Button
            size="lg"
            className="max-w-sm
  rounded-xl
  border-dark/20
  focus-visible:ring-0
  focus-visible:ring-offset-0
  focus:shadow-none
  focus:outline-none
  font-is"
            asChild
          >
            <a href="#converter">
              Start Converting <ArrowRight className="w-5 h-5" />
            </a>
          </Button>
        </div>

        <div class="grid grid-cols-3 gap-4 md:gap-8 mt-12 pt-8 border-t border-border">
          <div>
            <div class="text-2xl md:text-3xl font-bold text-dark/70">
              0%
            </div>

            <div class="text-sm text-muted-foreground">Image uploaded</div>
          </div>

          <div>
            <div class="text-2xl md:text-3xl font-bold text-dark/70">
              ∞
            </div>

            <div class="text-sm text-muted-foreground">
              Unlimited conversions
            </div>
          </div>

          <div>
            <div class="text-2xl md:text-3xl font-bold text-dark/70">
              2s
            </div>

            <div class="text-sm text-muted-foreground">
              Average processing
            </div>
          </div>
        </div>
      </div>
    </section>